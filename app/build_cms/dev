<?php

if (php_sapi_name() === "cli") {
    if (!isset($GLOBALS["dir_to_build_cms"])) {
        $GLOBALS["dir_to_build_cms"] = __DIR__;
    }
    
    $GLOBALS["autoLoadStartDir"] = __DIR__;
    require_once __DIR__ . "/build_cms_system/autoload.php";
    
    database::connect();
    start_terminal::main();
}